<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="20221002-1" author="great_warrior">
        <createTable tableName="users">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" primaryKeyName="user_pk"/>
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="use_google_2fa" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="google_2fa_secret" type="text">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <addAutoIncrement tableName="users" columnName="id"/>

        <createTable tableName="roles">
            <column name="id" type="int">
                <constraints nullable="false" primaryKey="true" primaryKeyName="role_pk"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="users_roles">
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="user_id, role_id"
                       constraintName="users_roles_pk"
                       tableName="users_roles"/>

        <addForeignKeyConstraint
                baseTableName="users_roles"
                baseColumnNames="user_id"
                constraintName="user_id_fk"
                referencedTableName="users"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="users_roles"
                baseColumnNames="role_id"
                constraintName="role_id_fk"
                referencedTableName="roles"
                referencedColumnNames="id"/>

        <insert tableName="users">
            <column name="username" value="john"/>
            <column name="password" value="$2a$12$0U9GRmh8/fC.Q3M9kNEPQeBjHCG9Izld2woffGJNFxSpCxbMYbrRy"/>
            <column name="use_google_2fa" value="false"/>
        </insert>

        <insert tableName="roles">
            <column name="id" value="1"/>
            <column name="name" value="ROLE_USER"/>
        </insert>

        <insert tableName="roles">
            <column name="id" value="2"/>
            <column name="name" value="ROLE_ADMIN"/>
        </insert>

        <insert tableName="users_roles">
            <column name="user_id" value="1"/>
            <column name="role_id" value="1"/>
        </insert>

        <insert tableName="users_roles">
            <column name="user_id" value="1"/>
            <column name="role_id" value="2"/>
        </insert>

    </changeSet>
</databaseChangeLog>